<section class="services">
    <div class="row" data-equalize-on="medium" data-equalizer>
        <div class="medium-6 large-4 columns clearfix" data-equalizer-watch>
            <div class="warranty">
                <div class="top tooltip">
                    {{ warranty_text | raw }}
                </div>
                <img src="{{ warranty_image.url }}" alt="">
            </div>
            <div class="title">
                <h2>
                    <small>{{ title_1 | raw }}</small>
                    {{ title_2 | raw }}
                </h2>
            </div>
        </div>
        <div class="medium-6 large-8 columns" data-equalizer-watch>
            <div class="content">{{ content | raw }}</div>
        </div>
    </div>
    <div class="row small-up-1 medium-up-2 large-up-4">
        {% for box in boxes %}
            <div class="column">
                <a href="{{ box.page }}" class="box">
                    <img src="{{ box.image.url }}" alt="">
                    <div class="details">
                        <div class="title1">{{ box.title_line_1 | raw }}</div>
                        <div class="title2">{{ box.title_line_2 | raw }}</div>
                        <div class="description">{{ box.content | raw }}</div>
                        <span href="{{ box.page }}" class="tan hollow button">Read More</span>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</section>