<div class="header-container" data-sticky-container>
    <header class="header" data-sticky data-options="marginTop:0;" style="width:100%" data-sticky-on="small">
        <div class="expanded row column collapse tan-background top">
            <div class="row">
                <div class="small-12 columns">
                    <ul class="simple horizontal menu">
                        {% if get_field('north_number', 'option') %}
                            <li class="number">
                                NORTH:
                                <a href="tel:{{ get_field('north_number', 'option') }}">
                                    ({{ get_field('north_number', 'option')[:3] }})
                                    {{ get_field('north_number', 'option')[3:3] }}
                                    -
                                    {{ get_field('north_number', 'option')[6:4] }}
                                </a>
                            </li>
                        {% endif %}
                        {% if get_field('south_number', 'option') %}
                            <li class="number">
                                SOUTH:
                                <a href="tel:{{ get_field('south_number', 'option') }}">
                                    ({{ get_field('south_number', 'option')[:3] }})
                                    {{ get_field('south_number', 'option')[3:3] }}
                                    -
                                    {{ get_field('south_number', 'option')[6:4] }}
                                </a>
                            </li>
                        {% endif %}
                        <li class="action">
                            <a href="#quote" class="brown button">INSTANT QUOTE</a>
                            <a href="#estimate" class="primary button">FREE IN-HOUSE ESTIMATE</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row column bottom">
            <div class="float-left">
                <img src="{{ get_field('header_logo', 'option').url }}" class="logo">
            </div>
            <div class="float-right">

                {{ wp_nav_menu_dropdown({
                    'theme_location': 'main',
                    'menu_class': 'horizontal',
                    'container_id': 'primary-navigation'
                }) | raw }}
                <!--
                <div id="primary-navigation">
                    <ul class="horizontal dropdown menu" data-dropdown-menu>
                        <li>
                            <a href="#">Item 1</a>
                            <ul class="menu">
                                <li><a href="#">Item 1A</a></li>
                            </ul>
                        </li>
                        <li><a href="#">Item 2</a></li>
                        <li><a href="#">Item 3</a></li>
                        <li><a href="#">Item 4</a></li>
                    </ul>
                </div>
                -->
            </div>
        </div>
    </header>
</div>